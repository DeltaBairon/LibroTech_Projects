<?xml version="1.0" encoding="utf-8"?>
<!-- 
  Este archivo es CRÍTICO para Azure App Service
  Colócalo en la RAÍZ del proyecto (mismo nivel que package.json)
-->
<configuration>
  <system.webServer>
    
    <!-- Define que src/server.js es el punto de entrada -->
    <handlers>
      <add name="iisnode" path="src/server.js" verb="*" modules="iisnode"/>
    </handlers>
    
    <!-- Reglas de reescritura de URLs -->
    <rewrite>
      <rules>
        <!-- No reescribir archivos estáticos -->
        <rule name="StaticContent" stopProcessing="true">
          <match url="^(.+\.(jpg|jpeg|png|gif|css|js|ico|svg|woff|woff2|ttf|eot|json))$" />
          <action type="Rewrite" url="{REQUEST_URI}"/>
        </rule>
        
        <!-- Redirigir todas las demás peticiones a src/server.js -->
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True"/>
          </conditions>
          <action type="Rewrite" url="src/server.js"/>
        </rule>
      </rules>
    </rewrite>
    
    <!-- Configuración de errores HTTP -->
    <httpErrors existingResponse="PassThrough" />
    
    <!-- Configuración de IISNode para Node.js -->
    <iisnode 
      node_env="production"
      nodeProcessCountPerApplication="1"
      maxConcurrentRequestsPerProcess="1024"
      maxNamedPipeConnectionRetry="100"
      namedPipeConnectionRetryDelay="250"
      loggingEnabled="true"
      logDirectory="iisnode"
      debuggingEnabled="false"
      devErrorsEnabled="false"
      watchedFiles="*.js;node_modules\*;routes\*.js;controllers\*.js"
    />
    
    <!-- Seguridad -->
    <security>
      <requestFiltering>
        <hiddenSegments>
          <remove segment="bin"/>
        </hiddenSegments>
      </requestFiltering>
    </security>
    
  </system.webServer>
</configuration>